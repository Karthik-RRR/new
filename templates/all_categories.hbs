                </div>
            </div>
        </li>
    </ul>
</div>


<section class="home-section">
    <div class="home-content">
        <span class="text"></span>
    </div>




    <table >
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th> Option</th>
        </tr>
    <tr>
                        {{#each z}}
                            <a href="/admin/categories/{{this.id}}/page/1">   <td >{{this.id}}</td></a>


                                <td>
                                    <a href="/admin/categories/{{this.id}}/page/1">{{this.name}}</td>     &nbsp;
                                &nbsp;  <td><a  onclick="return confirm('Are you sure?')"  href="category/{{this.id}}/delete">Delete</a> &nbsp
                                    <a href="/admin/category/{{this.id}}/edit">Update </a> &nbsp;  </td>
                                </tr>
                        {{/each}}


    </table>
    <br>

    <div class="all_pagination">
        <div class="pagination">
            <!--            <li class="page-item"><a class="page-link" href="{{this}}">{{this}}</a></li>-->
            {{#each pages_count }}

                <a href="{{this}}">{{this}}</a>
            {{/each}}

        </div>
    </div>

</section>
<script>
  let arrow = document.querySelectorAll(".arrow");
  for (var i = 0; i < arrow.length; i++) {
    arrow[i].addEventListener("click", (e)=>{
   let arrowParent = e.target.parentElement.parentElement;//selecting main parent of arrow
   arrowParent.classList.toggle("showMenu");
    });
  }
  let sidebar = document.querySelector(".sidebar");
  let sidebarBtn = document.querySelector(".bx-menu");
  console.log(sidebarBtn);
  sidebarBtn.addEventListener("click", ()=>{
    sidebar.classList.toggle("close");
  });
  </script>
</body>
